<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextAppearance">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="TextAppearancePrimaryButton" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeXXS</item>
        <item name="fontWeight">600</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearanceTitle" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeXXL</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/title_text</item>
    </style>
    <style name="TextAppearanceSubTitle" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeL</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/title_text</item>
    </style>

    <style name="TextAppearanceToolbarTitle" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeXXL</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearanceToolbarListText" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeXXS</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">#1C2D40</item>
    </style>

    <style name="TextAppearanceEditText" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeXXS</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/input_text</item>
    </style>

    <style name="TextAppearanceErrorText" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeXXS</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/input_error_color</item>
    </style>

    <style name="TextAppearanceListTitle" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeXXS</item>
        <item name="fontWeight">600</item>
        <item name="android:textColor">@color/list_title_text</item>
    </style>

    <style name="TextAppearanceListSubTitle" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeXXS</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/list_sub_title_text</item>
    </style>


    <style name="TextAppearanceDialogTitle" parent="AppTextAppearance">
        <item name="android:textSize">@dimen/textSizeL</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/dialog_title</item>
    </style>
    <!--BUTTON-->
    <style name="Button">
        <item name="backgroundTint">@color/logo_sky</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/cornerRadius3L</item>
        <item name="android:textAppearance">@style/TextAppearancePrimaryButton</item>
    </style>

    <style name="Button.Primary">
        <item name="backgroundTint">@color/logo_sky</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>